#	bindsym Shift+t exec --no-startup-id tor-browser, mode "default"
	bindsym s exec syncthing, mode "default"
	bindsym z exec zotero, mode "default"
	bindsym r exec kitty -e ranger, mode "default"
	bindsym Ctrl+r exec kitty -e nnn, mode "default"
	bindsym d exec waterfox-current https://drive.google.com/drive/u/0/shared-drives, mode "default"
